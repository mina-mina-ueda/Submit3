<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <h2>User info</h2>
          <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %> </th>  
            </tr>  
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </tbody>  
        </table>
            <div class="row">
              <%= link_to '',edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
            </div>
     
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "form-control"%>
          </div>
          <div class="form-group">
            <p>Opinion</p>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success data-disable-with" %>
          </div>
        <% end %>
      </div>    
 
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %>
                <br><%= @book.user.name %>
                <% end %>
                </td>
                <td><%= link_to @book.title, book_path(@user) %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                  <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
                  <td><%= link_to "Destroy",book_path(@book), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？"%></td>
               <% end %>              
              </tr>  
            </tbody>
          </table>
      </div>
    </div>
  </div>