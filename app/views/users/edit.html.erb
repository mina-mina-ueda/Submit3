<h2>User info</h2>
<%= form_with model: @book, local:true do |f| %>
    <div class="form-group">
      <p>Name</p>
      <%= f.text_field :Name %>
     </div>
 
    <div class="form-group">
      <p>Image</p>
    </div>
    
    <div class="form-group">
      <p>Introduction</p>
      <%= f.text_area :body %>
    </div>  
       
    <div class="form-group">
      <%= f.submit 'Update User' %>
    </div>
  <% end %>