<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %>
          <table class="table">
          <tbody> 
            <tr>
              <th>name</th>
              <th><%= @user.name %> </th>  
            </tr>  
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>  
        </table>
            <div class="row">
              <%= link_to '',edit_user_path(@user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
            </div>
     
      <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <div class="form-group">
            <p>Title</p>
            <%= f.text_field :title, class: "form-control"%>
          </div>
          <div class="form-group">
            <p>Opinion</p>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book', class: "btn btn-success data-disable-with" %>
          </div>
        <% end %>
      </div>   
    
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
                
              </tr>
            </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <td>
                <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user) %></td>
              </tr>  
            </tbody>
          <% end %>  
          </table>
      </div>
    </div>  
  </div>  