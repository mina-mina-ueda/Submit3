<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>

      <%= render 'books/sidebar', user: @user %> 

      <%= render 'books/createbar', book: @book %>
    
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
          <table class="table">
            <thead>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
              </tr>
            </thead>
          <% @users.each do |user| %>
            <tbody>
              <tr>
                <td>
                <%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "63x63" %>
                </td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user) %></td>
              </tr>  
            </tbody>
          <% end %>  
          </table>
      </div>
    </div>  
  </div>  