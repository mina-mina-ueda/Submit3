<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      
      <%= render 'books/sidebar', user: @user %>  
      
      <%= render 'books/createbar', book: @book %>
 
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>  
            </thead>
            <% @books.each do |book| %>
             <tbody>
              <tr>
                <td>
                <%= link_to user_path(@user) do %>
                <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "63x63" %>
                <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>  
            </tbody>
           <% end %>
          </table>
      </div>
    </div>
  </div>